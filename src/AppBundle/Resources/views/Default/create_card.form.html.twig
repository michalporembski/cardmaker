<html>
<head>
    <meta charset="UTF-8">
    <title>CardMaker</title>
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
</head>
<body>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h2 align="center">CardMaker</h2>
            <div class="jumbotron center">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    {{ form_label(form.layer) }}
                    {{ form_widget(form.layer, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.tag) }}
                    {{ form_widget(form.tag, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.caption) }}
                    {{ form_widget(form.caption, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.level) }}
                    {{ form_widget(form.level, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.text) }}
                    {{ form_widget(form.text, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.layoutSize) }}
                    {{ form_widget(form.layoutSize, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.textSize) }}
                    {{ form_widget(form.textSize, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.image) }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>
                <input type="submit" class="btn btn-primary pull-right" value="{{ 'cardmaker.buttons.preview'|trans }}"/>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="col-sm-6">
            {% if card %}
            <a href="{{ card }}">
                <img src="{{ card }}" alt="{{ 'cardmaker.labels.card-label'|trans }}"/><br/>
            </a>
            {% endif %}
        </div>
    </div>
</div>
</body>
</html>